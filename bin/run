#!/usr/bin/env python

import os
import sys
from PyROOT import environment
from optparse import OptionParser

parser = OptionParser()
parser.add_option("--env","-e",action="store",type="str",dest="env",default="",help="the name of the environment")
options,args = parser.parse_args()

if options.env != "":
    status = environment.load(options.env)
    if not status:
        sys.exit(1)

os.system(" ".join(args))
